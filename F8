#include <iostream>
#include <fstream>
using namespace std;
/*8.	Определить, содержатся ли во входном файле простые числа.
Если такие числа найдутся, то записать в выходной файл целую часть
среднего арифметического этих чисел и целую часть среднего арифметического всех чисел файла,
разделяя их одним пробелом, иначе вывести 0.*/
bool check (int num)/// Функция поиска простых чисел
{
    for (int i(2); i*i <= num; i++)
        if (num%i == 0)
            return false;/// если число оказалось с делителем, то возвращаем ложь, если же делители не найдены, то возвращаем правду
    return true;
}
int main()
{
    ifstream f("input.txt");
    if (f)
    {   double num;/// num требуется для обращения к элементам файла
        double sum(0), sum_simp(0), simple(0), i(0);/// i для подсчета всех чисел, симпл для простых
        while (!f.eof()) {
            f >> num;/// чтение из файла
                i++;/// cчитаем числа
                sum+=num;/// суммируем числа
                if (check (num) == true)///  если число простое, то суммируем и считаем простые числа отдельно
                {
                    sum_simp+=num;
                    simple++;
                }
        }
        ofstream f1("output.txt");/// Добавляем ср арифметическое в выходной файл
        if (simple == 0)
            f1 << 0;
        else{
            f1 << sum_simp/simple << ' ' << sum/i;}
        f.close (); f1.close ();
    }
    else/// при отсутствии файла
    cout << "Not file";
    return 0;
}
